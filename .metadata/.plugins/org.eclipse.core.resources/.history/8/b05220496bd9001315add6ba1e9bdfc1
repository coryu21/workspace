import java.io.File;
import java.util.Iterator;
import java.util.LinkedList;


public class WatchThread extends Thread{
	LinkedList list;
	long date[];
	Boolean check = true;
	String usb_name[];
	public WatchThread(LinkedList list){
		this.list = list;
		date = new long[256];
		usb_name = new String[256];
	}
	
	public void run(){
		init();
		while(true){
			fileWatch();
		}
	}
	
	public void init(){
		Iterator it = list.iterator();
		int count = 0;
		String fileName;
		File temp;
		
		while(it.hasNext()){	
			fileName = ((File)it.next()).getPath();
			temp = new File(fileName);
			date[count] = temp.lastModified();
			System.out.println(date[count]);
			count++;
		}
		
		count = 0;
		
		File list[] = File.listRoots();
		
		for(int i = 0; i<list.length; i++){
			System.out.println(list[i]);
		}
	}
	
	public void fileWatch(){
		Iterator it = list.iterator();
		long last;
		String fileName;
		File temp;
		
		for(int i = 0; it.hasNext() && check; i++){
			fileName = ((File)it.next()).getPath();
			temp = new File(fileName);
			last = temp.lastModified();
			if(date[i] != last){
				System.out.println("파일이 변하였다!!!!");
				check = false;
				new PasswordJFrame("1234");
			}
		}
	}
	
	public void usbWatch(){
		//File computer = new File
		
	}

}
